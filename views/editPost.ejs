<%include ./partials/header.ejs%>

    <div class="ui main text container segment">
        <div class="ui huge header">
            Edit Post - <%=editPost.title%>
        </div>
        <form class="ui form" action="/blogs/<%=editPost._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="editPost[title]" value="<%=editPost.title%>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="editPost[image]" value="<%=editPost.image%>">
            </div>
            <div class="field">
                <label>Post</label>
                <textarea name="editPost[body]"><%=editPost.body%></textarea>
            </div>
            <input class="ui primary button" type="submit">
        </form>
    </div>

<%include ./partials/footer.ejs%>